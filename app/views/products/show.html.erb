<div class="container">
	<h1><%= @product.title %></h1>
	<p>Description :<%= @product.description %></p>
	<p>Prix : <%= number_to_currency @product.price %></p>

	<% if current_user.admin %>
		<%= link_to "Modifier", edit_product_path(@product)  %> | 
		<%= link_to "Supprimer", product_path(@product), method: :delete , data: {confirm: "Etes vous sure?"} %>
	<% end %>
</div>