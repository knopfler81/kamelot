<div class="container">
	<div class="row">
		<div class="col-12">
			<%= simple_form_for(@billing_address, url: clients_billing_address_path(@billing_address)) do |f| %>
				<div class="row">
					<div class="col-12 col-md-6">
						<%= f.input :first_name, label: false, placeholder: current_user.first_name, input_html: {value: current_user.first_name}, required: true %>
					</div>
					<div class="col-12 col-md-6">
						<%= f.input :last_name, label: false, placeholder: current_user.last_name,input_html: { value: current_user.last_name}, required: true %>
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="col-12">
						<%= f.input :address, label: false,	placeholder: "Recherchez votre adresse........", input_html: { id: "autocomplete_address"} %>
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="col-6 col-md-3">
						<%= f.input :street_number, label: false,	placeholder: "N° de rue",	required: true, input_html: { id: "street_number"} %>	
					</div>
					<div class="col-6 col-md-9">
						<%= f.input :route, label: false,	placeholder: "Voie", required: true, input_html: { id: "route"} %>
					</div>
				</div>
				<div class="row">
					<div class="col-12 col-md-2">
							<%= f.input :postal_code, label: false, placeholder: "Code Postal", required: true, input_html: { id: "postal_code"} %>
					</div>
					<div class="col-12 col-md-5">
							<%= f.input :locality, label: false,	placeholder: "Ville", required: true, input_html: { id: "locality"} %>
					</div>
					<div class="col-12 col-md-5">
						<%= f.input :administrative_area_level_1, label: false, placeholder: "Région", input_html: { id: "administrative_area_level_1"} %>
					</div>
				</div>
					<br><br>
					<div class="row">
						<div class="col-12">
							<%= f.submit "Valider", class: "btn-main btn-block" %>
						</div>
					</div>
				<% end %>
		</div>
	</div>
</div>