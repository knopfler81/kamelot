<% @client_returnings.order('created_at DESC').each do |returning| %>
	<%= link_to clients_returning_path(returning) do  %>
		<div class="small-cards">
			<div class="row">
				<div class="col-4">
					<p>Demand√© le : </p><p><%= l(returning.created_at, format: '%d %B %Y' )%></p>
				</div>
				<div class="col-4">
					<p>Articles: <%= returning.total_items_count %></p>
					<p>Total : <%= number_to_currency_euro returning.total_refund %></p>
				</div>
				<div class="col-2">
					<p><%= returning.status %></p>
				</div>
				<div class="col-2">
					<i class="fa fa-chevron-right"></i>
				</div>
			</div>		
