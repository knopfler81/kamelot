<div class="container">
	<h1>VÃ©rifiez votre commande</h1>
	<div class="row">
		<div class="col-12 col-md-6"> <!--tableau -->
			<table class='table striped'>
				<% @order.items.each do |item| %>
					<tbody>
						<tr>
							<td><%= item.product.brand %></td>
							<td><%= item.product.title %></td>
							<td><%= item.size.size_name %></td>
							<td><%= number_to_currency_euro item.product.price_cents %></td>
						</tr>
					</tbody>
				<% end %>
				<tbody>
					<td></td>
					<td></td>
					<td>Sous total</td>
					<td ><%= number_to_currency_euro @order.sub_total %></td>
				</tbody>
				<tbody>
					<td></td>
					<td></td>
					<td>Livraison</td>
					<td><%= number_to_currency_euro @order.shipping_fees %></td>
				</tbody>
				<tfoot>
					<td></td>
					<td></td>
					<td>Total</td>
					<td><%= number_to_currency_euro @order.total_price %></td>
				</tfoot>
			</table>
			<br>
			<br>
			<br>
			<%= form_for @order, url: clients_checkout_path do |f| %>
				<%= f.hidden_field :user_id %>
					<% if current_user.shipping_address %>
						<%= f.submit "Payer", class: "btn btn-success btn-block" %>
					<% end %>
			<% end %>
		</div>

		<div class="col-12 col-md-4 offset-md-2">
			<div class="row">
				<div class="col-12">
					<h3>Adresse de livraison</h3>
					<hr>
					<% if current_user.shipping_address.present? %>
						<h4><%= current_user.shipping_address.title %></h4>
						<p><%=  current_user.shipping_address.first_name %></p>
						<p><%=  current_user.shipping_address.last_name %></p>
						<p><%=  current_user.shipping_address.address_1 %></p>
						<p><%=  current_user.shipping_address.address_2 %></p>
						<p><%=  current_user.shipping_address.zipcode %> <%=  current_user.shipping_address.city %></p>
					  <p><%=  current_user.shipping_address.phone %></p>
						<%= link_to "Modifier l'adresse", edit_shipping_address_path(current_user.shipping_address),  class: 'btn btn-success' %>				
					<% else %>
						<%= link_to "Ajouter une adresse pour continuer", new_shipping_address_path(current_user), class: 'btn btn-success'  %>		
					<% end %>
				</div>
			</div>
			<br><br>
			<div class="row">
				<div class="col-12">
					<% if current_user.billing_address.present?%>
					<h3>Adresse de facturation </h3>
						<hr>
						<h4><%= current_user.billing_address.title %></h4>
						<p><%=  current_user.billing_address.first_name %></p>
						<p><%=  current_user.billing_address.last_name %></p>							
						<p><%=  current_user.billing_address.address_1 %></p>
						<p><%=  current_user.billing_address.address_2 %></p>
						<p><%=  current_user.billing_address.zipcode %> <%=  current_user.billing_address.city %></p>
					  <p><%=  current_user.billing_address.phone %></p>
						<%= link_to "Modifier l'adresse", edit_billing_address_path(current_user.billing_address),  class: 'btn btn-success' %>
					<% else %>
							<%= link_to "Ajouter adresse de facturation", new_billing_address_path(current_user), class: 'btn btn-success' %>	
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>