<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 offset-1">
      <h2>Je n'ai pas encore de compte, je m'inscris pour la première fois</h2>
      <hr>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <div class="row">
         <div class="col-12 <%= 'error_message' if @user.errors.full_messages.any? %> ">
           <%= devise_error_messages! %>
         </div>
       </div>
      
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :gender,  collection: ["Madame", "Monsieur"], prompt: "Choisir", label: false , hint: "Séléctionnez votre genre"%>
          </div>
          <div class="col-12 col-md-6">     
            <%= f.input :birth_date, as: :date, start_year: Date.today.year - 90, label: false, hint: "Entrez date de naissance" %>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :first_name, autofocus: true, placeholder: "Prénom", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :last_name, autofocus: true, placeholder: "Nom", label: false %>
          </div>
        </div>
        <hr>
        
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :address_1, autofocus: true, placeholder: "Adresse", label: false %>
          </div>

          <div class="col-12 col-md-6">
            <%= f.input :address_2, autofocus: true, placeholder: "Complément d'adresse", label: false %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-4">
           <%= f.input :zipcode, autofocus: true, placeholder: "Code postal", label: false %>
          </div>
          <div class="col-12 col-md-4">
           <%= f.input :city, autofocus: true, placeholder: "Ville", label: false %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.input :country, label: false, selected: 'FR' %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :phone, autofocus: true, placeholder: "Numéro de téléphone", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :email, autofocus: true, placeholder: "email", label: false %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :password, placeholder: "Mot de passe", hint: "A remplir seulement si vous souhaitez mondifier votre mot de passe", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :password_confirmation, placeholder: "Confirmation du mot de passe", hint: "A remplir seulement si vous souhaitez mondifier votre mot de passe", label: false %>
          </div>
        </div>


        <hr>
        <div class="row">
          <div class="col-6">
            <%= f.submit "Modifier mon inscription", class: 'btn btn-success btn-block' %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>