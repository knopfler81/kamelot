<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 offset-1">
      <h2>Je n'ai pas encore de compte, je m'inscris pour la première fois</h2>
      <hr>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <div class="row">
         <div class="col-12 <%= 'error_message' if @user.errors.full_messages.any? %> ">
           <%= devise_error_messages! %>
         </div>
       </div>
      
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :gender,  collection: ["Madame", "Monsieur"], prompt: "C", label: false , required: true, input_html: { class: "custom-select" } %>
          </div>
          <div class="col-12 col-md-6">     
            <%#= f.input :birth_date, as: :datepicker, :input_html => { :value => Date.today}%>
            <%= f.input :birth_date, as: "string", placeholder: "Date de naissance", label: false, required: true, input_html: { class: 'datepicker' } %>
          </div>
        </div>

        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :first_name, autofocus: true, placeholder: "Prénom", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :last_name, autofocus: true, placeholder: "Nom", label: false %>
          </div>
        </div>
        <hr>
  
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :phone, autofocus: true, placeholder: "Numéro de téléphone", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :email, autofocus: true, placeholder: "email", label: false %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :password, placeholder: "Mot de passe", label: false %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :password_confirmation, placeholder: "Confirmation du mot de passe", label: false %>
          </div>
        </div>


        <hr>
        <div class="row">
          <div class="col-6">
            <%= f.submit "Valider mon inscription", class: 'btn-main btn-block' %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>

</div>