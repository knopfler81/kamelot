<div class="content">
	<h2>Mot de passe oublié?</h2>
	<hr>
	<br>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.input :email, label: false, placeholder: "Votre email", autofocus: true, autocomplete: "email" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Envoyez moi les instructions de récupération de mot de passe" , class: " btn btn-main btn-block" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>