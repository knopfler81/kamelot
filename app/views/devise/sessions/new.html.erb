<div class="container">
    <h2>S'identifier</h2>
    <hr>
  <div class="row">
    <div class="col-12 col-md-6">
      <p>J'ai déjà un compte client</p>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-12 col-md-6">
            <%= f.input :email, autofocus: true, placeholder: "Email", label: false %>
            <%= f.input :password, placeholder: "Mot de passe", label: false %>
           </div>
          <div class="col-12">
            <%= f.submit "Se connecter",class: " btn btn-main" %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class: "btb btn-secondary" %><br />
            <% end -%>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-md-6">
      <p> Je suis un nouveau client</p>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-main" %><br />
      <% end -%>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "S'inscrire avec' #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: " btn btn-main" %><br />
        <% end -%>
      <% end -%>
    </div>
  </div>
</div>