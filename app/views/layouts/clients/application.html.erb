
<!DOCTYPE html>
<html>
  <head>
    <title>SuperShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= stylesheet_pack_tag    'application' %>    
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300,400" rel="stylesheet">    
    <%#= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body style="background: <%= prefered_body_color %>" id="clients">
    <%= render "layouts/clients/clients_nav" %>
    <%= render "layouts/shared/flashes" %> 
    <%= render "layouts/shared/back_button" %>
    <%= yield %>
    <%= javascript_pack_tag 'application' %> <!-- doit etre en dessous de turbolink -->
    <%= render 'layouts/clients/footer' %>
  </body>
</html>

