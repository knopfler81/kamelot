<div class="journal-content">
<table class="table table-striped">
		<thead>
			<tr>
				<th><small>ID</small></th>
				<th><small>Date ajout</small></th>
				<th><small>Ref article</small></th>
				<th><small>Marque</small></th>
				<th><small>Couleur</small></th>
				<th><small>Tailles</small></th>
				<th><small>Stock d√©part</small></th>
				<th><small>Prix achat/article</small></th>
				<th><small>Marge/article</small></th>
				<th><small>Prix vente</small></th>
				<th><small>Nombre de vente</small></th>
				<th><small>Stock restant</small></th>
				<th><small>Valeur stock restant</small></th>
				<th><small>C-A</small></th>
			</tr>
		</thead>
		<tbody>
	
		<% @sizes.each do |size| %>
				<tr>
					<td><%= size.product.id %></td>
					<td><%= l(size.created_at, format: '%d/%m/%Y' )  %></td>
					<td><%= size.product.title %></td>
					<td><%= size.product.brand %></td>
					<td><%= size.product.color %></td>
					<td><%= size.size_name %></td>
					<td><%= @dashboard.starting_stock(size) %></td>
					<td><%= size.product.buying_price%></td>
					<td><%= @dashboard.cost_price(size) %></td>
					<td><%= size.product.price %></td>
					<td><%= @dashboard.number_of_sales(size) %></td>
					<td><%= (size.quantity + @dashboard.number_of_sales(size)) - @dashboard.number_of_sales(size)%></td>
					<td class="stock_value"><%= @dashboard.remaining_stock_value(size)%></td>
					<td><%=  size.product.price *  @dashboard.number_of_sales(size) %></td>
				</tr>
			<% end %>
		</tbody>
		<tfoot>
			<tr style="background: red">
				<td>
					Total:
				</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td>X</td>
				<td><%= @dashboard.total_starting_stock %></td>
				<td><%= @dashboard.total_buying_price %></td>
				<td><%= @dashboard.total_cost_price %></td>
				<td><%= @dashboard.total_selling_price %></td>
				<td><%= @dashboard.total_number_of_sales %></td>
				<td><%= @dashboard.total_remaining_stock %></td>
				<td><%= @dashboard.total_remaining_stock_value %></td>
			</tr>
		</tfoot>
	</table>
</div>

