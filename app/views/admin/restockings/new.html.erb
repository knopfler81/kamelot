<div class="container">
	<h1 class="primary_title">REASSORT DE L'ARTICLE</h1>
	<hr>
	<%= simple_form_for( @restocking, url:  admin_product_restockings_path) do |f| %>		
		<section class="section">
			<div class="row">
				<div class="col-12 ">
					<div class="<%= 'error_message' if @restocking.errors.full_messages.any? %> ">
						<% if  @restocking.errors.any? %>
							<% @restocking.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</section>
		<section class="section">
			<h3>AJOUTER LA DESCRIPTION</h3>
			<hr>
			<br>

			<div class="row">
				<div class="co-12 col-md-6">
					<%= f.input :price, placeholder: "Prix de vente", label: false, required: true %>
					<%= f.hidden_field :product_id, value: @product.id %>
				</div>
				<div class="co-12 col-md-6">
					<%= f.input :buying_price, placeholder: "Prix d'achat (important pour la comptat)", label: false, required: true %>
				</div>
			</div>
		</section>

		<section class="section">
		 	<h3>AJOUTER LES NOUVELLES TAILLES DISPONIBLES</h3>
		 	<small>Cliquer sur le bouton "Ajouter une taille" pour chaque taille que vous souhaitez ajouter.</small>
		 		<hr>
		 		<br>
		 		<div class="row">
		 			<div class="col-12">
			 			<div id="sizes">
			 			  <%= f.simple_fields_for :sizes do |size| %>
			 		      <%= render "size_fields", f: size %>
			 		    <% end %>
			 		   	<div class="links">
			 		     	<%= link_to_add_association "Ajouter une taille", f, :sizes, partial: "size_fields", class: "btn btn-secondary btn-lg" %>
			 		   	</div>
			 			</div>
		 			</div>
		 		</div>
		 	  <br><br>
		 	  <div class="col-12">
		 			<%= f.submit "Valider le produit", class: "btn btn-main btn-lg btn-block" %>
		 	  </div>
		</section>
	<% end %>
</div>