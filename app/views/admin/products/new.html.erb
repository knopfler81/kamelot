<div class="container">
	<h1 class="primary_title">CREATION D'UN NOUVEL ARTICLE</h1>
	<hr>
	<%= simple_form_for(@product, url: admin_products_path)do |f| %>		
		<section class="section">
			<div class="row">
				<div class="col-12 ">
					<div class="<%= 'error_message' if @product.errors.full_messages.any? %> ">
						<% if  @product.errors.any? %>
							<% @product.errors.full_messages.each do |msg| %>
								<li><%= msg %></li>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</section>
		<section class="section">
			<h3>AJOUTER LA DESCRIPTION</h3>
			<hr>
			<br>

			<div class="row">
				<div class="co-12 col-md-6">
					<%= f.input :category_id, as: :grouped_select, collection: MainCategory.all, group_method: :categories, group_label_method: :gender, input_html: { class: "custom-select"}, label: false, prompt: "Choisir une catégorie" %>
				</div>
				<div class="co-12 col-md-6">
					<%= f.input :brand, placeholder: "Marque", label: false, required: true %>
				</div>
			</div>

			<div class="row">
				<div class="co-12 col-md-4">
					<%= f.input :title, placeholder: "Titre", label: false, required: true %>
				</div>
				<div class="co-12 col-md-4">
					<%= f.input :color, placeholder: "Couleur", label: false, required: true %>
				</div>
				<div class="co-12 col-md-4">
					<%= f.input :ref, placeholder: "Référence", label: false, required: true %>
				</div>
			</div>
			
			<div class="row">
				<div class="col-12">
					<%= f.input :description, placeholder: "Entrez les description de votre article!", input_html: {rows: 5}, label: false, required: true %>
					<%= f.input :supplier_id, collection: Supplier.all.collect {|p| [ p.company, p.id ] }, label: false, prompt: "Fournisseur", input_html: { class: "custom-select"}, required: true  %>
				</div>
			</div>
			<div class="row">
				<div class="co-12 col-md-6">
					<%= f.input :buying_price, placeholder: "Prix d'achat (important pour la comptat)", label: false, required: true %>
				</div>
				<div class="co-12 col-md-6">
					<%= f.input :price, placeholder: "Prix de vente", label: false, required: true %>
				</div>
			</div>
		</section>

		<section class="section">	
			<h3>AJOUTER DES IMAGES</h3>
			<hr>
			<br>
			<div class="row">
				<div class="col-12">
					<div class="image-upload-wrap">
					  <%= f.file_field :attachments, multiple: true, class: "file-upload-input", id: "files", required: true %>
					  <h3>Glisser déposer images</h3>
					  <p>Pour un rendu optimal les images doivent être au format portrait</p>
					  <div id="result"></div> 
					</div>   
				</div>
			</div>
		</section>
		 	<%= f.submit "Valider le produit", class: "btn btn-main btn-lg btn-block" %>
			<br><br>
	<% end %>
</div>