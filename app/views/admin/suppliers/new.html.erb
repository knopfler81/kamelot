<div class="container">
	<h1 class="primary_title">AJOUTER UN FOURNISSEUR</h1>
	<hr>
	<br><br>

		<%= simple_form_for(@supplier, url: admin_suppliers_path) do |f| %>

		<div class="row">
		  <div class="col-12 col-md-12">
				<%= f.input :company, label: false, placeholder: "Nom du fournisseur" %>
		  </div>
		</div>
		<br>
		<div class="row">
		  <div class="col-12 col-md-4">
				<%= f.input :address, label: false, placeholder: "Adresse" %>
		  </div>
	    <div class="col-12 col-md-4">
				<%= f.input :zipcode, label: false, placeholder: "Code Postal" %>
	    </div>
      <div class="col-12 col-md-4">
  			<%= f.input :city, label: false, placeholder: "Ville" %>
      </div>
		</div>
		<div class="row">
			<div class="col-12 col-md-6">
				<%= f.input :phone_number, label: false, placeholder: "Numéro de téléphone" %>
			</div>
			<div class="col-12 col-md-6">
				<%= f.input :email, label: false, placeholder: "Email" %>
			</div>
		</div>

		<br>
			<%= f.submit "Valider", class: "btn btn-main btn-block" %>		
		<% end %> 

</div>