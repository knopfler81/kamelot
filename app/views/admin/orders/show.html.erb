									<%= simple_form_for(@order, url: admin_order_path(@order) )do |f| %>
				        		<%= f.hidden_field :status, value: "partly_shipped" %>
				        		<%= submit_tag "Commande exp√©di√©e" , class: "btn btn-secondary"%>
				        	<% end %>
